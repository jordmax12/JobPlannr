    <script type="text/javascript">
        var inProcess = false;
        var userIP = '@TempData["userIP"]';
        var jobPlannr = {};

        jobPlannr.toggleOverlay = function () {
            var display = $('#loading').css('display');

            if (display != 'none')
                $('#loading').hide();
            else
                $('#loading').show();
        }

        $('#subscribeSubmit').click(function (event) {
            event.preventDefault();

            if (inProcess) return;
            inProcess = true;
            jobPlannr.toggleOverlay();

            var ip = userIP;
            var email = $('#subscribeEmail').val() !== undefined ? $('#subscribeEmail').val() : null;

            if(email == null)
            {
                alert("Email is not valid or empty, please enter a valid one.");
                return;
            }

            var data = {
                IP: ip,
                Email: email
            }

            $.ajax({
                type: "POST",
                url: "/Account/AddEmailSubscription",
                data: JSON.stringify(data),
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    swal("You're on our radar, chief!", "Stay tuned for some really sweet emails coming your way! (We promise not too much)", "success");
                    $('#subscribeEmail').val('');
                    inProcess = false;
                    jobPlannr.toggleOverlay();
                }
            });
        });

        $('#signInSubmit').click(function (event) {
            event.preventDefault();

            if (inProcess) return;
            inProcess = true;
            jobPlannr.toggleOverlay();

            var email = $('#user_username').val() !== undefined ? $('#user_username').val() : null,
                password = $('#user_password').val() !== undefined ? $('#user_password').val() : null;

            var data = {
                Username: email,
                Password: password
            }

            $.ajax({
                type: "POST",
                url: "/Account/Login",
                data: JSON.stringify(data),
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    console.log(data);
                    if (data.IsSuccess) {
                        //swal("", "Logged in", "success");
                        $('#user_email').val('');
                        inProcess = false;
                        jobPlannr.toggleOverlay();
                        window.location.href = '/Home/Dashboard';
                    } else {
                        swal("", data.Error, "error");
                        inProcess = false;
                        jobPlannr.toggleOverlay();
                    }

                }
            });
        });

        $('#signUpSubmit').click(function (event) {
            event.preventDefault();

            if (inProcess) return;
            inProcess = true;
            jobPlannr.toggleOverlay();

            var email = $('#new_user_email').val() !== undefined ? $('#new_user_email').val() : null,
                password = $('#new_user_password').val() !== undefined ? $('#new_user_password').val() : null,
                username = $('#new_user_username').val() !== undefined ? $('#new_user_username').val() : null;

            var data = {
                Email: email,
                Password: password,
                Username: username
            }

            $.ajax({
                type: "POST",
                url: "/Account/Register",
                data: JSON.stringify(data),
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    //swal("", "Registered", "success");
                    console.log(data);
                    if (data.IsSuccess) {
                        swal("", "Registered!", "success");
                        $('#new_user_email').val('');
                        inProcess = false;
                        jobPlannr.toggleOverlay();
                    } else {
                        inProcess = false;
                        console.log(data);
                        jobPlannr.toggleOverlay();
                    }

                }
            });
        });


    </script>
